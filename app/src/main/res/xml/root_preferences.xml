<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">



        <ListPreference
            app:defaultValue="Finedine"
            app:entries="@array/billing_mode_entries"
            app:entryValues="@array/billing_mode_value"
            app:key="Finedine"
            app:title="Billing mode"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Dine-in"
            app:entries="@array/Billing_type"
            app:entryValues="@array/Billing_values"
            app:key="reply"
            app:title="Billing Type"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Item_sorting"
            app:entryValues="@array/item_sorting_value"
            app:key="OFF"
            app:title="Barcode auto genertion"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="signature"
            app:title="No of tabs"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Blue_tooth"
            app:entryValues="@array/Blue_tooth_value"
            app:key="OFF"
            app:title="Inventory Control"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Item_sorting"
            app:entryValues="@array/item_sorting_value"
            app:key="OFF"
            app:title="Bluetooth"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Item_sorting"
            app:entryValues="@array/item_sorting_value"
            app:key="OFF"
            app:title="Itemsorting(Home)"
            app:useSimpleSummaryProvider="true" />


        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Schduled sales data delete" />

        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Item_sorting"
            app:entryValues="@array/item_sorting_value"
            app:key="OFF"
            app:title="Printer type"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">
        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Item_sorting"
            app:entryValues="@array/item_sorting_value"
            app:key="OFF"
            app:title="Email setup"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="OFF"
            app:entries="@array/Item_sorting"
            app:entryValues="@array/item_sorting_value"
            app:key="OFF"
            app:title="Recipient Email"
            app:useSimpleSummaryProvider="true" />


